
header {
  width: 100%;
  background-color: $slateGreyTwo;

  .header-content {
    display: flex;
    align-items: center;
    padding: 10px 0;

    span {
      &.header-text {
        color: $whiteTwo;
        font-size: 18px;
        padding-left: 10px;

        strong {
          color: $white;
        }
      }
    }
  }
}

.hide {
  position: absolute !important;
  top: 0;
  opacity: 0;
  height: 0;
  overflow: hidden;
  transition: opacity 0.3s ease, height 0s ease 0.3s;
}

.show {
  opacity: 1;
  height: auto;
  transition: opacity 0.3s ease, height 0s ease 0s;
}

section {
  &.user-dashboard {
    .user-content {
      display: flex;
      justify-content: space-between;
      padding-top: 50px;

      @media screen and (max-width: $mobileMax) {
        padding-top: 10px;
      }

      .user-profile {
        display: flex;
        flex-direction: column;
        align-items: center;

        .img-profile {
          width: 300px;

          @media screen and (max-width: $tabletMax) {
            width: 85px;
          }

          img {
            width: 100%;
            border-radius: 50%;
          }
        }

        .user-info {
          text-align: center;

          @media screen and (max-width: $tabletMax) {
            text-align: left;
            padding-left: 20px;
          }

          h4 {
            &.user-name {
              font-size: 16px;
              line-height: 24px;
              color: $slateGrey;
              padding-top: 10px;

              @media screen and (max-width: $tabletMax) {
                font-size: 20px;
                line-height: 32px;
              }
            }
          }

          span {
            &.user-bio {
              font-size: 14px;
              line-height: 22px;
              color: $warmGrey;
            }
          }
        }

        @media screen and (max-width: $tabletMax) {
          flex-direction: row;
          padding: 20px 0 60px;
        }

        @media screen and (max-width: $mobileMax) {
          padding-bottom: 40px;
        }
      }

      .user-panel {
        width: 70%;         /* @media screen and (max-width: $tabletMax) {
          width: 100%;
        } */

        .tab {
          .tab-line {
            @extend .line;
            padding-top: 9px;
          }

          a {
            color: $slateGrey;
            font-size: 14px;
            padding-left: 30px;
            position: relative;

            @media screen and (max-width: $tabletMax) {
              font-size: 16px;
            }

            span {
              &.tab-num {
                background-color: $whiteTwo;
                font-weight: 600;
                border-radius: 30%;
                padding: 2px 5px;
                margin-left: 8px;
              }
            }

            &.active {
              &:before {
                content: '';
                height: 4px;
                left: 10px;
                position: absolute;
                bottom: -10px;
                width: 100%;
                background-color: $orange;
              }
            }
          }
        }

        input {
          &.search {
            color: $warmGrey;
            border: 1px solid $whiteTwo;
            border-radius: 3px;
            margin-top: 50px;
            padding: 8px 0 8px 40px;
            width: 200px;
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="%23666666" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>');
            background-repeat: no-repeat;
            background-position: 8px center;

            &:focus {
              border-color: $whiteTwo;
              outline: none;
            }
          }
        }

        ul {
          &.card-projects {
            li {
              padding-top: 55px;

              .card-line {
                @extend .line;
                padding-top: 25px;
              }

              a {
                &.project-name {
                  font-size: 18px;
                  color: $blueLink;
                }
              }

              p {
                &.project-description {
                  font-size: 12px;
                  color: $warmGrey;
                  padding-top: 10px;
                }
              }

              .details-project {
                padding-top: 20px;
                display: flex;
                align-items: center;

                a {
                  display: flex;
                  align-items: center;
                }

                svg {
                  &.UnderlineNav-octicon {
                    fill: $warmGrey;
                  }

                  &.octicon-repo-forked {
                    fill: $warmGrey;
                  }
                }

                span {
                  font-size: 12px;
                  color: $warmGrey;
                  padding-right: 25px;
                  padding-left: 5px;
                }
              }
            }
          }
        }
      }

      @media screen and (max-width: $tabletMax) {
        flex-direction: column;
      }
    }
  }
}
